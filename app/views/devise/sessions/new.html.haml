.row
  .large-2.columns &nbsp;
  .large-8.columns
    %h1 Sign In
    %p &nbsp;
    = devise_error_messages!
  
= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f|
  .row
    .large-2.columns &nbsp;
    .large-4.medium-6.small-12.columns
      = f.label :email
      = f.email_field :email, class: 'form-control'    
    .large-4.medium-6.small-12.columns
      = f.label :password
      = f.password_field :password, class: 'form-control'
    .large-2.columns &nbsp;
  .row
    .large-2.columns &nbsp;
    .large-4.columns
      %small
        = link_to 'Sign up', new_registration_path(resource_name), class: ''
        &nbsp;|&nbsp;
        = link_to "Forgot password", new_password_path(resource_name), class: ''
    .large-4.columns
      = f.submit 'Go', :class => 'button right tiny'
    .large-2.columns &nbsp;
